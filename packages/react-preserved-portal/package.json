    "iframe",
    "canvas",
    "dom-instance",
    "unmanaged-dom",
    "state-preservation",
    "type-safe",
    "typescript",
    "react-portal",
    "dom-manipulation",
    "mini-player",
    "pip",
    "rich-text-editor",
    "charts",
    "data-visualization"
  ],
  "version": "0.2.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
